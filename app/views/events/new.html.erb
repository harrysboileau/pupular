<div class="walk_or_hangout">
  Are you making a:
  <br><br>
  <button class="Walk">Walk</button>
  <br><br>
  or
  <br><br>
  <button class="Hangout">Hangout</button>
  <br>
</div>
<div id="sign_in_form">
<h1>Create Event</h1>

<%= form_for [current_dog, @event] do |f| %>

<%= f.hidden_field :type, value: nil %>
<%= f.label :title, "Title"%><br/>
<%= f.text_field :title, placeholder: "Event Title" %><br>
<%= f.label :location, "Location" %><br>
<%= f.text_field :location, placeholder: "Address" %><br>
<%=f.label :date %><br>
<%= f.hidden_field :lat  %><br>
<%= f.hidden_field :long %><br>

<%=f.text_field :date %><br>
<%= f.label :start_time, "Start Time"%><br/>
<%= f.time_select :start_time,
  :combined => true,
  :default => (Time.at((((Time.now.to_i+900)/1800).round)*1800)),
  :minute_interval => 30,
  :time_separator => "",
  :start_hour => 5,
  :start_minute => 0,
  :end_hour => 23,
  :end_minute => 30
%>
<br/>
<%= f.label :description, "Description"%><br/>

<%= f.text_area :description, placeholder: "Event Description" %><br>
<div class="errorMessage"></div>
<%= f.submit 'bark with me', {class: "call_to_action", id: "new_event_button"}  %>
<% end %>
</div>