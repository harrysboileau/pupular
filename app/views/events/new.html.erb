<div class="walk_or_hangout">
  Are you making a:
  <br><br>
  <button class="Walk">Walk</button>
  <br><br>
  or
  <br><br>
  <button class="Hangout">Hangout</button>
  <br>
</div>
<div id="sign_in_form">
<h1>Create Event</h1>
<%= form_for [current_dog, @event] do |f| %>

<%= f.hidden_field :type, value: nil %>
<%= f.label :title, "Title"%><br/>
<%= f.text_field :title, placeholder: "Event Title" %><br>
<%= f.label :location, "Location"%><br/>
<%= f.text_field :location, placeholder: "Event Location" %><br>
<%= f.label :start_time, "Start Time"%><br/>
<%= f.datetime_select :start_time %><br/>
<%= f.label :end_time, "End Time"%><br/>
<%= f.datetime_select :end_time %><br/>
<%= f.label :description, "Description"%><br/>

<%= f.text_area :description, placeholder: "Event Description" %><br>
<div class="errorMessage"></div>
<%= f.submit 'bark with me', class: "call_to_action" %>
<% end %>
</div>