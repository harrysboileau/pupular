<div id="sign_in_form">
<h1>Write a message:</h1>
<%= form_for :message, url:dog_messages_path(current_dog) do |f| %>
<%= f.label :subject, "Subject" %><br/>
<%= f.text_field :subject, placeholder: "Message Subject" %><br>
<%= f.label :dog_id, "Recipient" %><br/>
<%= f.text_field :dog_id, placeholder: "Who's the message to?" %><br>
<%= f.label :content, "Message" %><br/>
<%= f.text_area :content, placeholder: "What would you like to say?" %><br>
<%= f.submit 'throw a bone', class:"call_to_action"%>
<% end %>

</div>
