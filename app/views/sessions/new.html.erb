<h1>Sign In</h1>

<%= form_for :dog_session, { url: "/sessions", method: "post" } do |f| %>

<% if @dog_session.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@dog_session.errors.count, "error") %> prohibited this dog from being saved:</h2>

      <ul>
      <% @dog_session.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<%= f.label "Email or Username" %>
<%= f.text_field :username, placeholder: "Username" %>
<br>
