<div id="sign_up_form">
<h1>Sign Up!</h1>

<h4>Submit your dog info</h4>

<%= form_for @dog, {url: '/dogs', method: "post"} do |f| %>
<% if @dog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@dog.errors.count, "error") %> prohibited this dog's information from being saved:</h2>

      <ul>
      <% @dog.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<%= f.label "Username" %><br/>
<%= f.text_field :username, {placeholder: "Username"} %><br>

<%= f.label "Full Name" %><br/>
<%= f.text_field :name, {placeholder: "Full Name"} %><br><br>
<%= f.submit "Sign Up", class: "call_to_action" %>

<% end %>
</div>
