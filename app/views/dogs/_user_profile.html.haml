.users_profile
  #profile_image
    = image_tag current_dog.profile.image_url(:profile) if current_dog.profile.image?
    #value
    = button_to "change photo", {}, { class: "image", id: "#{current_dog.profile.id}", style: "display: none" }
  = button_to "edit", {}, { class: "edit_all_profile", id: "#{current_dog.profile.id}" }



  #profile_name
    %h3= @dog.name
  // There's so much repetition below. How can we clean it up?
  // Decorator that gives the haml for each attribute?
  // Partial that changes label/class etc. to appropriate for the attribute we pass in?
  #profile_breed
    %p
      .label Breed:<br/>
      %span#value= "#{@profile.breed}"
    = button_to "update breed", {}, { class: "breed", id: "#{current_dog.profile.id}", style: "display: none" }
  #profile_location
    %p
      .label Location:<br/>
      %span#value= "#{@profile.location}"
    = button_to "update location", {}, { class: "dogs_location", id: "#{current_dog.profile.id}", style: "display: none" }
  #profile_age
    %p
      .label Age:<br/>
      %span#value= "#{@profile.age}"
      %span#not_value
    = button_to "update age", {}, { class: "age", id: "#{current_dog.profile.id}", style: "display: none" }
  #profile_size
    %p
      .label Size:<br/>
      %span#value= "#{@profile.size}"
    = button_to "update size", {}, { class: "size", id: "#{current_dog.profile.id}", style: "display: none" }
  #profile_gender
    %p
      .label Gender:<br/>
      %span#value= "#{@profile.gender}"
    = button_to "update gender", {}, { class: "gender", id: "#{current_dog.profile.id}", style: "display: none" }
  #profile_spayed
    %p
      .label Fixed?:<Br/>
      %span#value= "#{@profile.fixed}"
    = button_to "update spayed", {}, { class: "spayed", id: "#{current_dog.profile.id}", style: "display: none" }
